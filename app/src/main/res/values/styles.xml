<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="select_date_text">
        <item name="android:textSize">@dimen/t5</item>
        <item name="android:textColor">@drawable/date_text_color</item>
        <item name="android:background">@drawable/date_text_bg</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="select_priority_text">
        <item name="android:layout_width">@dimen/dp_46</item>
        <item name="android:layout_height">@dimen/dp_25</item>
        <item name="android:textSize">@dimen/t5</item>
        <item name="android:textColor">@drawable/date_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
</resources>
